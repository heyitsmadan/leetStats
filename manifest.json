{
  "manifest_version": 3,
  "name": "LeetCode Stats Extension (Vite)",
  "version": "1.0",
  "description": "Fetches, caches, and analyzes LeetCode submission history using Vite and TS.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "src/content/inject.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LeetCode Stats"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/null_dark.png"
      ],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ]
}