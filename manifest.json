{
  "manifest_version": 3,
  "name": "leetStats",
  "version": "1.0",
  "description": "Unlock powerful insights into your LeetCode journey. Visualize your progress with advanced analytics and showcase your stats with a custom, shareable card.",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "leetstats@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "src/content/inject.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "leetStats"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "assets/trophies/*",
        "assets/icons/*"
      ],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ]
}